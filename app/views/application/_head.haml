%head
  %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
  %title SassNishinada
  - if params[:controller] == 'resets'
    - if params[:action] == 'reset'
      = stylesheet_link_tag 'reset', media: 'all'
    - elsif params[:action] == 'normalize'
      = stylesheet_link_tag 'normalize', media: 'all'
    - elsif params[:action] == 'sanitize'
      = stylesheet_link_tag 'sanitize', media: 'all'
  - else
    = stylesheet_link_tag 'application', media: 'all'
  = javascript_include_tag 'application'
  = csrf_meta_tags
